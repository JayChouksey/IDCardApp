<?xml version="1.0" encoding="utf-8"?>
<!-- Parent Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="HomeFragment"
    android:orientation="vertical">

    <!-- Scroll View -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- ScrollView's Linear Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Toolbar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/theme">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/app_img"
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/logo_img" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/app_text"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/logo_text" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_distributor"/>

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Distributor's Name"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- End of toolbar -->


            <!-- Row 1 of Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="horizontal">

                <!-- CardView Add School -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewAddSchool"
                    android:backgroundTint="@color/theme"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name1"
                            android:text="Add School"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img1"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/img1"
                            android:src="@drawable/add_school_icon"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- End of CardView Add School -->

                <!-- CardView School List-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewSchoolList"
                    android:backgroundTint="@color/theme"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name2"
                            android:text="School List"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img2"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/img2"
                            android:src="@drawable/school_list_student"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- End of CardView School List -->

            </LinearLayout>
            <!-- End of Row 1 of Grid -->

            <!-- Row 2 of Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="horizontal">

                <!-- CardView Import Students -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewImportStudents"
                    android:backgroundTint="@color/theme"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name3"
                            android:text="Import Students"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img3"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/img3"
                            android:src="@drawable/import_students_icon"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- End of CardView Import Students -->

                <!-- CardView Add Student -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewAddStudent"
                    android:backgroundTint="@color/theme"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name4"
                            android:text="Add Student"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img4"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/img4"
                            android:src="@drawable/add_student_icon"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- End of CardView Add Student -->

            </LinearLayout>
            <!-- End of Row2 of Grid  -->

            <!-- Row 3 of Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="horizontal">

                <!-- CardView List Students -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewListStudents"
                    android:backgroundTint="@color/theme"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name5"
                            android:text="List Students"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img5"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/img5"
                            android:src="@drawable/list_students_icon"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- End of CardView List Students -->

                <!-- CardView About-->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewAbout"
                    android:backgroundTint="@color/theme"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name6"
                            android:text="About"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img6"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/img6"
                            android:src="@drawable/about_icon"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- End of CardView About -->

            </LinearLayout>
            <!-- End of Row3 of Grid  -->

            <!-- Row 4 of Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="horizontal">

                <!-- CardView Contact -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewContact"
                    android:backgroundTint="@color/theme"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name7"
                            android:text="Contact"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img7"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/img7"
                            android:src="@drawable/contact_icon"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- End of CardView Contact -->

                <!-- CardView Services -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/cardViewServices"
                    android:backgroundTint="@color/theme"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/name8"
                            android:text="Services"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img8"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/img8"
                            android:src="@drawable/services_icon"
                            android:layout_marginTop="15dp"
                            android:layout_centerHorizontal="true"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <!-- End of CardView Services -->

            </LinearLayout>
            <!-- End of Row4 of Grid  -->



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/home_footer_text"
                android:textSize="20sp"
                android:gravity="center"/>

        </LinearLayout>
        <!-- End of ScrollView's Linear Layout -->
    </ScrollView>
    <!-- End of Scroll View -->
</LinearLayout>
    <!-- Parent Layout -->
